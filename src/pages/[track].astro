---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard';
import TrackQuiz from '../components/game/Quiz';
import { marked } from 'marked'; 

export async function getStaticPaths() {
  const tracks = [
    { slug: 'cloud', title: 'Cloud Engineering', desc: 'Building resilient, scalable infrastructure.' },
    { slug: 'dataengineer', title: 'Data Engineering', desc: 'Pipelines, ETL, and Data Warehousing.' },
    { slug: 'gamedev', title: 'Game Development', desc: 'Interactive experiences and 3D Systems.' },
    { slug: 'software-engineer', title: 'Software Engineering', desc: 'Full-stack development and tooling.' },
  ];

  return tracks.map((track) => ({
    params: { track: track.slug },
    props: { ...track },
  }));
}

const { track } = Astro.params;
const { title, desc } = Astro.props;

import { skillMap, certMap, courseMap, degrees } from '../data/portfolio';

const currentSkills = skillMap[track] || [];
const currentCerts = certMap[track] || [];
const currentCourses = courseMap[track] || [];
const trackCourses = currentCourses.map(c => c.name);
const allDegrees = degrees;

const allProjects = await getCollection('projects');
const trackProjects = allProjects.filter((project) => 
  project.data.tracks.includes(track)
).sort((a, b) => {
    // Featured first, then by date (simplistic string sort for now)
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return 0;
});
---

<Layout title={`Daniel Jalali | ${title}`}>
  <div class="fixed inset-0 pointer-events-none z-0">
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-brand-primary opacity-[0.03] blur-3xl rounded-full translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-brand-secondary opacity-[0.03] blur-3xl rounded-full -translate-x-1/2 translate-y-1/2"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    
    {/* Navigation Anchor */}
    <nav class="absolute top-8 left-4 md:left-0 z-50">
        <a href="/" class="group flex items-center gap-2 text-sm font-mono text-gray-500 hover:text-white transition-colors backdrop-blur-md bg-black/30 p-2 rounded-lg">
            <span class="p-1 rounded bg-gray-900 border border-gray-700 group-hover:border-brand-primary transition">‚Üê</span>
            <span>Return to Hub</span>
        </a>
    </nav>

    {/* Hero Section - Full Height */}
    <header class="min-h-[90vh] flex flex-col justify-center items-center text-center animate-fade-in-up">
      <div class="mb-6">
          <span class="px-4 py-1.5 bg-gray-900 border border-gray-700 rounded-full text-xs text-brand-primary uppercase tracking-widest font-bold">
              Selected Track
          </span>
      </div>
      <h1 class="text-5xl md:text-8xl font-bold text-white mb-8 tracking-tight">
        {title}
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 max-w-2xl leading-relaxed">
        {desc}
      </p>
      
      <div class="mt-24 animate-bounce flex flex-col items-center gap-2 opacity-50">
        <span class="text-[10px] uppercase tracking-widest text-gray-500">Initialize</span>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>
      </div>
    </header>

    {/* Skills Section (Restored) */}
    {currentSkills.length > 0 && (
      <section class="min-h-[50vh] flex flex-col justify-center py-24 border-t border-gray-900 animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="max-w-5xl mx-auto w-full">
            <h2 class="text-3xl font-bold text-white mb-16 flex items-center gap-4">
            <span class="text-brand-primary">///</span> Technical Arsenal
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
            {currentSkills.map(skill => (
                <div class="flex flex-col items-center gap-4 group transition-all duration-500 hover:-translate-y-2">
                <div class="w-24 h-24 md:w-32 md:h-32 bg-gray-900/50 rounded-2xl flex items-center justify-center p-6 border border-gray-800 group-hover:border-brand-primary group-hover:bg-gray-900 transition shadow-xl shadow-brand-primary/5">
                    <img src={skill.icon} alt={skill.name} class="w-full h-full object-contain filter grayscale group-hover:grayscale-0 transition duration-500 opacity-70 group-hover:opacity-100" />
                </div>
                <span class="text-sm font-mono text-gray-500 group-hover:text-white transition uppercase tracking-wider">{skill.name}</span>
                </div>
            ))}
            </div>
        </div>
      </section>
    )}

    {/* Education Section (Moved Above Certs) */}
    <section class="min-h-[40vh] flex flex-col justify-center py-16 border-t border-gray-900 animate-fade-in-up" style="animation-delay: 0.1s;">
      <div class="max-w-5xl mx-auto w-full">
         <h2 class="text-3xl font-bold text-white mb-12 flex items-center gap-4">
          <span class="text-brand-primary">///</span> University Education
         </h2>
         <div class="grid grid-cols-1 gap-8">
            {allDegrees.map(degree => (
              <div class="bg-gray-900/40 p-8 rounded-2xl border border-gray-700 hover:border-brand-primary transition-all duration-300 relative overflow-hidden group">
                 <div class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition duration-500">
                    <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>
                 </div>
                 
                 <div class="relative z-10">
                    <h3 class="text-2xl font-bold text-white tracking-tight mb-1">{degree.title}</h3>
                    <p class="text-xl text-brand-primary mb-4">{degree.institution}</p>
                    
                    {/* Relevant Coursework Logic */}
                    {(() => {
                        const visibleCourses = degree.relevantCourses.filter(c => trackCourses.includes(c));
                        if(visibleCourses.length === 0) return null;
                        
                        return (
                            <div class="mb-4">
                                <h4 class="text-xs uppercase text-gray-500 font-bold mb-2 tracking-wider">Relevant Coursework</h4>
                                <div class="flex flex-wrap gap-2">
                                    {visibleCourses.map(course => (
                                        <span class="px-2 py-1 bg-gray-800 text-gray-300 text-xs rounded border border-gray-700 font-mono">
                                            {course}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        );
                    })()}

                    <div class="flex flex-wrap items-center gap-6 text-sm text-gray-400 font-mono border-t border-gray-800 pt-4">
                        <span class="flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full bg-brand-primary"></span>
                            Year: {degree.year}
                        </span>
                        <span class="flex items-center gap-2">
                             <span class="w-2 h-2 rounded-full bg-green-500"></span>
                             Status: VERIFIED
                        </span>
                    </div>
                 </div>
              </div>
            ))}
         </div>
      </div>
    </section>

    {/* Certifications & Coursework Section */}
    {currentCerts.length > 0 && (
      <section class="min-h-[40vh] flex flex-col justify-center py-24 border-t border-gray-900 animate-fade-in-up" style="animation-delay: 0.3s;">
         <div class="max-w-6xl mx-auto w-full">
            <h2 class="text-3xl font-bold text-white mb-16 flex items-center gap-4">
            <span class="text-brand-secondary">///</span> Certifications & Coursework
            </h2>
            
            {/* Logic to split Official Certs vs Udemy Courses */}
            {(() => {
                const officialCerts = currentCerts.filter(c => c.type === 'certification');
                const courseWork = currentCerts.filter(c => c.type === 'course');

                return (
                    <div>
                        {/* 1. Official Certifications */}
                        {officialCerts.length > 0 && (
                            <div class="mb-12">
                                <h3 class="text-xl font-bold text-gray-400 mb-6 uppercase tracking-wider">Official Certifications</h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                    {officialCerts.map(cert => (
                                        <div class="relative bg-gray-900/50 p-6 rounded-2xl flex items-center gap-6 border border-gray-800 hover:border-brand-primary/50 transition duration-300 group">
                                            <div class="w-20 h-20 bg-white/5 rounded-xl flex items-center justify-center p-2 shrink-0 group-hover:scale-110 transition">
                                                <img src={cert.image} alt={cert.name} class="max-w-full max-h-full object-contain" onError="this.style.display='none'" />
                                            </div>
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <h3 class="text-xl font-bold text-white leading-tight">{cert.name}</h3>
                                                </div>
                                                <p class="text-sm text-gray-400 mb-2">{cert.provider}</p>
                                                
                                                <div class="flex gap-2">
                                                    <span class="inline-block px-3 py-1 bg-purple-500/10 text-purple-400 text-xs font-bold rounded-full border border-purple-500/20">
                                                        OFFICIAL CERT
                                                    </span>
                                                    {cert.status === 'in-progress' && (
                                                        <span class="inline-block px-3 py-1 bg-yellow-500/10 text-yellow-500 text-xs font-bold rounded-full border border-yellow-500/20">
                                                        IN PROGRESS
                                                        </span>
                                                    )}
                                                    {cert.status === 'completed' && (
                                                        <span class="inline-block px-3 py-1 bg-green-500/10 text-green-500 text-xs font-bold rounded-full border border-green-500/20">
                                                        VERIFIED
                                                        </span>
                                                    )}
                                                </div>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}

                        {/* Separator if both exist */}
                        {officialCerts.length > 0 && courseWork.length > 0 && (
                            <div class="w-full h-px bg-gray-800 my-12 relative">
                                <div class="absolute left-1/2 -translate-x-1/2 -top-3 bg-black px-4 text-gray-600 text-sm font-mono">SUPPLEMENTAL LEARNING</div>
                            </div>
                        )}

                        {/* 2. Supplemental Coursework (Udemy, etc) */}
                        {courseWork.length > 0 && (
                             <div class="mb-12">
                                <h3 class="text-xl font-bold text-gray-400 mb-6 uppercase tracking-wider">Independent Coursework</h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                    {courseWork.map(cert => (
                                        <div class="relative bg-gray-900/30 p-6 rounded-2xl flex items-center gap-6 border border-gray-800 hover:border-blue-500/30 transition duration-300 group">
                                            <div class="w-16 h-16 bg-white/5 rounded-xl flex items-center justify-center p-2 shrink-0 grayscale group-hover:grayscale-0 transition">
                                                <img src={cert.image} alt={cert.name} class="max-w-full max-h-full object-contain" onError="this.style.display='none'" />
                                            </div>
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <h3 class="text-lg font-bold text-gray-200 leading-tight">{cert.name}</h3>
                                                </div>
                                                <p class="text-sm text-gray-500 mb-2">{cert.provider}</p>
                                                
                                                <div class="flex gap-2">
                                                    <span class="inline-block px-3 py-1 bg-blue-500/10 text-blue-400 text-xs font-bold rounded-full border border-blue-500/20">
                                                        COURSEWORK
                                                    </span>
                                                    {cert.status === 'completed' && (
                                                        <span class="inline-block px-3 py-1 bg-green-500/5 text-green-500/80 text-xs font-bold rounded-full border border-green-500/10">
                                                        COMPLETED
                                                        </span>
                                                    )}
                                                </div>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>
                );
            })()}
         </div>
      </section>
    )}

    {/* Projects Section - Spacious Grid */}
    <section class="min-h-screen py-32 border-t border-gray-900 animate-fade-in-up" style="animation-delay: 0.5s;">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-4xl md:text-6xl font-bold text-white mb-24 text-center tracking-tight">Executed Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {trackProjects.map(async (project) => {
                const html = await marked.parse(project.body);
                
                return (
                <ProjectCard 
                    client:load 
                    title={project.data.title}
                    description={project.data.description}
                    date={project.data.date}
                    tags={project.data.tags}
                    image={project.data.image}
                    links={project.data.links}
                    bodyHtml={html}
                />
                );
            })}
            </div>

            {trackProjects.length === 0 && (
            <div class="text-center py-24 border-2 border-dashed border-gray-800 rounded-3xl bg-gray-900/20">
                <p class="text-xl text-gray-500 mb-2">No projects loaded for this track yet.</p>
                <p class="text-sm font-mono text-gray-700">Initialize inventory module...</p>
            </div>
            )}
        </div>
    </section>

    {/* Gamification: Quiz (BOTTOM) */}
    <div class="py-32 animate-fade-in-up flex flex-col items-center border-t border-gray-900" style="animation-delay: 0.6s;">
      <h3 class="text-white text-2xl font-bold mb-8">Test Your Knowledge</h3>
      <TrackQuiz client:visible track={track} />
    </div>

  </div>
</Layout>
